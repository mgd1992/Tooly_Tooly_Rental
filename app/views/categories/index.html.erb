<% @categories.each do |category| %>
  <div class="col-12 col-md-6 w-100 mx-auto">
    <div class="d-flex justify-content-center border p-5 w-50 mx-auto my-5 w-75 category-list">
        <div class="cat-bg-img" style="background-image: url(<%= cl_image_path category.photo.key, crop: :fill %>)"></div>
        <div class="overlay"></div>
        <div class="text-cat">
          <%= link_to category.name, category_path(category) %>
        </div>
    </div>
  </div>
<% end %>
