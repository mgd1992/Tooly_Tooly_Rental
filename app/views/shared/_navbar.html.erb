<div class="navbar navbar-expand-sm navbar-light navbar-tooly">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "TT-rental-web.png" %>
    <% end %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


    <div class="collapse navbar-collapse nav-list text-end" id="navbarSupportedContent" when>
      <ul class="navbar-nav mt-3 text-end">
          <li class="nav-item active">
            <%= link_to "Rent a tool", categories_path, class: "nav-link" %>
          </li>
          <li class="nav-item active">
            <%= link_to "New Tool", new_tool_path, class: "nav-link" %>
          </li>
          <li class="nav-item-about">
            <%= link_to "About us", about_us_path, class: "nav-link text-end" %>
          </li>
          <li class="nav-item dropdown text-end">
          <% if user_signed_in?%>
            <%if current_user.photo.attached? %>
              <%= cl_image_tag current_user.photo.key, crop: :fill, class: "avatar", data: { bs_toggle: "dropdown" }, id: "navbarDropdown" %>
            <% else %>
              <i class="fa-solid fa-user" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
            <% end %>
          <% else %>
            <i class="fa-solid fa-user" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
          <% end %>
            <div class="dropdown-menu dropdown-menu-end p-0 m-1 w-25" aria-labelledby="navbarDropdown" data-bs-popper="static">
            <% if user_signed_in?%>
              <%= link_to "Profile", profile_path(current_user), class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, class: "dropdown-item", data: {turbo_method: :delete} %>
            <% else %>
              <%= link_to "Log in", new_user_session_path, class: "dropdown-item" %>
            <% end %>
            </div>
          </li>
      </ul>
    </div>

  </div>
</div>
